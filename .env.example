# ===========================================
# تنظیمات محیطی بک‌اند ChargePal (Laravel)
# ===========================================

APP_NAME=ChargePal
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://bk.chargepal.ir
APP_TYPE=main

# تنظیمات Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# تنظیمات دیتابیس
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=chargepal
DB_USERNAME=root
DB_PASSWORD=

# ===========================================
# تنظیمات Cache و Session
# ===========================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ===========================================
# تنظیمات Redis
# ===========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ===========================================
# تنظیمات Mail
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@chargepal.ir"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# تنظیمات AWS (Arvan Cloud)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Arvan Cloud Backup
ARVAN_CLOUD_ENDPOINT=
ARVAN_CLOUD_KEY=
ARVAN_CLOUD_SECRET=
ARVAN_CLOUD_REGION=

# ===========================================
# تنظیمات Sanctum (Authentication)
# ===========================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1,cp.chargepal.ir,bk.chargepal.ir

# ===========================================
# تنظیمات Firebase
# ===========================================
FIREBASE_CREDENTIALS=/path/to/firebase-credentials.json

# ===========================================
# تنظیمات پرداخت
# ===========================================
# درگاه‌های پرداخت و تنظیمات مربوطه

# Sepehr Gateway
SEPEHR_TERMINAL_ID=
SEPEHR_USERNAME=
SEPEHR_PASSWORD=

# Pasargad Gateway
PASARGAD_MERCHANT_ID=
PASARGAD_TERMINAL_ID=
PASARGAD_CERTIFICATE_PATH=

# Inopay
INOPAY_TENANT=
INOPAY_CALLBACK_URL=https://bk.chargepal.ir/v1/callback/inopay

# ===========================================
# تنظیمات SMS
# ===========================================
SMSIR_API_KEY=
SMSIR_SECRET_KEY=
SMSIR_LINE_NUMBER=

# ===========================================
# تنظیمات Bazaar (پرداخت درون‌برنامه‌ای)
# ===========================================
BAZAAR_API_KEY=

# ===========================================
# تنظیمات مختلف
# ===========================================
# Timezone
APP_TIMEZONE=Asia/Tehran

# Locale
APP_LOCALE=fa
APP_FALLBACK_LOCALE=fa
APP_FAKER_LOCALE=fa_IR

# Filesystem
FILESYSTEM_DISK=local

# Memcached
MEMCACHED_HOST=127.0.0.1

# Vite (برای asset compilation)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
